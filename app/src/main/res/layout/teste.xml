<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_header"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="#000"
            android:backgroundTint="@color/back_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_number_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/black"
            android:padding="2dp"
            android:text="@string/text_number_table"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/text_cardapio"
            app:layout_constraintStart_toStartOf="@+id/text_cardapio"
            app:layout_constraintTop_toBottomOf="@+id/text_cardapio" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_margin="4dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_cardapio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_cardapio"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/logo" />

        <TextView
            android:id="@+id/text_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/text_body"
            android:textAllCaps="true"
            android:textColor="#1A254F"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_header" />

        <TextView
            android:id="@+id/text_entradas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:background="@color/gray_section"
            android:padding="5dp"
            android:text="@string/text_entradas"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/text_principais"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_body" />


        <TextView
            android:id="@+id/text_principais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:background="@color/gray_section"
            android:padding="5dp"
            android:text="@string/text_principais"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/text_bebidas"
            app:layout_constraintStart_toEndOf="@id/text_entradas"
            app:layout_constraintTop_toTopOf="@id/text_entradas"


            />

        <TextView
            android:id="@+id/text_bebidas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:background="@color/gray_section"
            android:padding="5dp"
            android:text="@string/text_bebidas"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/text_sobremesas"
            app:layout_constraintStart_toEndOf="@id/text_principais"
            app:layout_constraintTop_toTopOf="@id/text_entradas"

            />

        <TextView
            android:id="@+id/text_sobremesas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/gray_section"
            android:padding="5dp"
            android:text="@string/text_sobremesas"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_bebidas"
            app:layout_constraintTop_toTopOf="@id/text_entradas" />

        <TextView
            android:id="@+id/text_entradas_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/text_entradas"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_entradas" />


        <CheckBox
            android:id="@+id/check_bolinhas_de_queijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/image_bolinhas_de_queijo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_bolinhas_de_queijo" />
        <TextView
            android:id="@+id/text_bolinhas_de_queijo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_bolinhas_de_queijo"
            app:layout_constraintStart_toEndOf="@id/check_bolinhas_de_queijo"
            app:layout_constraintTop_toBottomOf="@id/text_entradas_02"
            app:layout_constraintEnd_toStartOf="@+id/image_bolinhas_de_queijo"
            android:textSize="18sp"
            android:layout_marginTop="18dp" />
        <TextView
            android:id="@+id/text_value_bolinhas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_value_bolinhas"
            app:layout_constraintTop_toBottomOf="@id/text_bolinhas_de_queijo"
            app:layout_constraintStart_toStartOf="@id/text_bolinhas_de_queijo"
            />
        <ImageView
            android:id="@+id/image_tempo_bolinhas_de_queijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_access_time_24"
            android:textSize="12sp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_bolinhas"
            app:layout_constraintStart_toEndOf="@+id/text_value_bolinhas"
            app:layout_constraintTop_toTopOf="@+id/text_value_bolinhas" />
        <TextView
            android:id="@+id/text_tempo_bolinhas_de_queijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tempo_bolinhas_de_queijo"
            android:textColor="@color/red_time"
            android:layout_marginStart="3dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_bolinhas"
            app:layout_constraintStart_toEndOf="@+id/image_tempo_bolinhas_de_queijo"
            app:layout_constraintTop_toTopOf="@+id/text_value_bolinhas" />

        <ImageView
            android:id="@+id/image_bolinhas_de_queijo"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/bolinhas_de_queijo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_bolinhas_de_queijo"
            app:layout_constraintTop_toTopOf="@id/text_bolinhas_de_queijo" />

        <View
            android:id="@+id/view_bolinhas"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/image_bolinhas_de_queijo"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gray_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            />


        <CheckBox
            android:id="@+id/check_batata_frita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/image_batata_frita"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_batata_frita" />
        <TextView
            android:id="@+id/text_batata_frita"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_batata_frita"
            app:layout_constraintStart_toEndOf="@id/check_batata_frita"
            app:layout_constraintTop_toBottomOf="@id/view_bolinhas"
            app:layout_constraintEnd_toStartOf="@+id/image_batata_frita"
            android:textSize="18sp"
            android:layout_marginTop="18dp" />
        <ImageView
            android:id="@+id/image_batata_frita"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/batata_frita"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_batata_frita"
            app:layout_constraintTop_toTopOf="@id/text_batata_frita"
            />
        <TextView
            android:id="@+id/text_value_batata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_value_batata"
            app:layout_constraintStart_toStartOf="@+id/text_batata_frita"
            app:layout_constraintTop_toBottomOf="@id/text_batata_frita" />
        <TextView
            android:id="@+id/text_tempo_batata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tempo_bolinhas_de_queijo"
            android:textColor="@color/red_time"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_batata"
            app:layout_constraintStart_toEndOf="@+id/image_tempo_batata"
            app:layout_constraintTop_toTopOf="@+id/text_value_batata" />
        <ImageView
            android:id="@+id/image_tempo_batata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_access_time_24"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_batata"
            app:layout_constraintStart_toEndOf="@+id/text_value_batata"
            app:layout_constraintTop_toTopOf="@+id/text_value_batata" />
        <View
            android:id="@+id/view_batata_frita"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/image_batata_frita"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gray_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/check_pasteizinhos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/image_pasteizinhos_assados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_pasteizinhos_assados" />
        <TextView
            android:id="@+id/text_pasteizinhos_assados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_pasteizinhos_assados"
            app:layout_constraintStart_toEndOf="@id/check_pasteizinhos"
            app:layout_constraintTop_toBottomOf="@id/view_batata_frita"
            app:layout_constraintEnd_toStartOf="@+id/image_batata_frita"
            android:textSize="18sp"
            android:layout_marginTop="18dp" />
        <ImageView
            android:id="@+id/image_pasteizinhos_assados"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/pasteizinhos_assados"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_pasteizinhos_assados"
            app:layout_constraintTop_toTopOf="@id/text_pasteizinhos_assados"
            />
        <TextView
            android:id="@+id/text_value_pasteizinhos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_value_pasteizinhos"
            app:layout_constraintStart_toStartOf="@+id/text_pasteizinhos_assados"
            app:layout_constraintTop_toBottomOf="@id/text_pasteizinhos_assados" />
        <TextView
            android:id="@+id/text_tempo_pasteizinhos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tempo_pasteizinhos_assados"
            android:textColor="@color/red_time"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_pasteizinhos"
            app:layout_constraintStart_toEndOf="@+id/image_tempo_pasteizinhos"
            app:layout_constraintTop_toTopOf="@+id/text_value_pasteizinhos" />
        <ImageView
            android:id="@+id/image_tempo_pasteizinhos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_access_time_24"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_pasteizinhos"
            app:layout_constraintStart_toEndOf="@+id/text_value_pasteizinhos"
            app:layout_constraintTop_toTopOf="@+id/text_value_pasteizinhos" />
        <View
            android:id="@+id/view_pasteizinhos"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/image_pasteizinhos_assados"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gray_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/text_principais_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/text_principais"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_pasteizinhos" />

        <CheckBox
            android:id="@+id/check_moqueca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/image_moqueca"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_moqueca" />
        <TextView
            android:id="@+id/text_moqueca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_moqueca"
            app:layout_constraintStart_toEndOf="@id/check_moqueca"
            app:layout_constraintTop_toBottomOf="@id/text_principais_02"
            app:layout_constraintEnd_toStartOf="@+id/image_moqueca"
            android:textSize="18sp"
            android:layout_marginTop="18dp" />
        <ImageView
            android:id="@+id/image_moqueca"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/moqueca"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_moqueca"
            app:layout_constraintTop_toTopOf="@id/text_moqueca"
            />
        <TextView
            android:id="@+id/text_value_moqueca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_value_moqueca"
            app:layout_constraintStart_toStartOf="@+id/text_moqueca"
            app:layout_constraintTop_toBottomOf="@id/text_moqueca" />
        <TextView
            android:id="@+id/text_tempo_moqueca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tempo_moqueca"
            android:textColor="@color/red_time"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_moqueca"
            app:layout_constraintStart_toEndOf="@+id/image_tempo_moqueca"
            app:layout_constraintTop_toTopOf="@+id/text_value_moqueca" />
        <ImageView
            android:id="@+id/image_tempo_moqueca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_access_time_24"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_moqueca"
            app:layout_constraintStart_toEndOf="@+id/text_value_moqueca"
            app:layout_constraintTop_toTopOf="@+id/text_value_moqueca" />
        <View
            android:id="@+id/view_moqueca"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/image_moqueca"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gray_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/check_lasanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/image_lasanha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_lasanha" />

        <TextView
            android:id="@+id/text_lasanha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_lasanha"
            app:layout_constraintStart_toEndOf="@id/check_lasanha"
            app:layout_constraintTop_toBottomOf="@id/view_moqueca"
            app:layout_constraintEnd_toStartOf="@+id/image_lasanha"
            android:textSize="18sp"
            android:layout_marginTop="18dp" />

        <ImageView
            android:id="@+id/image_lasanha"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/lasanha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_lasanha"
            app:layout_constraintTop_toTopOf="@id/text_lasanha"
            />

        <TextView
            android:id="@+id/text_value_lasanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_value_lasanha"
            app:layout_constraintStart_toStartOf="@+id/text_lasanha"
            app:layout_constraintTop_toBottomOf="@id/text_lasanha" />
        <TextView
            android:id="@+id/text_tempo_lasanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tempo_lasanha"
            android:textColor="@color/red_time"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_lasanha"
            app:layout_constraintStart_toEndOf="@+id/image_tempo_lasanha"
            app:layout_constraintTop_toTopOf="@+id/text_value_lasanha" />
        <ImageView
            android:id="@+id/image_tempo_lasanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_access_time_24"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_lasanha"
            app:layout_constraintStart_toEndOf="@+id/text_value_lasanha"
            app:layout_constraintTop_toTopOf="@+id/text_value_lasanha" />

        <View
            android:id="@+id/view_lasanha"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/image_lasanha"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gray_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/check_peixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/image_peixe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_peixe" />
        <TextView
            android:id="@+id/text_peixe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_lasanha"
            app:layout_constraintStart_toEndOf="@id/check_peixe"
            app:layout_constraintTop_toBottomOf="@id/view_lasanha"
            app:layout_constraintEnd_toStartOf="@+id/image_peixe"
            android:textSize="18sp"
            android:layout_marginTop="18dp" />
        <ImageView
            android:id="@+id/image_peixe"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/peixe_assado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_peixe"
            app:layout_constraintTop_toTopOf="@id/text_peixe"
            />
        <TextView
            android:id="@+id/text_value_peixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_value_peixe"
            app:layout_constraintStart_toStartOf="@+id/text_peixe"
            app:layout_constraintTop_toBottomOf="@id/text_peixe" />
        <TextView
            android:id="@+id/text_tempo_peixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tempo_peixe"
            android:textColor="@color/red_time"
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_peixe"
            app:layout_constraintStart_toEndOf="@+id/image_tempo_peixe"
            app:layout_constraintTop_toTopOf="@+id/text_value_peixe" />
        <ImageView
            android:id="@+id/image_tempo_peixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_access_time_24"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_value_peixe"
            app:layout_constraintStart_toEndOf="@+id/text_value_peixe"
            app:layout_constraintTop_toTopOf="@+id/text_value_peixe" />
        <View
            android:id="@+id/view_peixe"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/image_peixe"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gray_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
